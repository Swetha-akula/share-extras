<extension>
    <modules>
    
        <!--
            Customization modules for adding i18n labels and importing client-side dependencies for
            the two extra web previewer plugins
        -->
        <module>
            <id>Iframe Viewer</id>
            <customizations>
                <!-- Enable FLVPlayer.js plugin in web-previewer, plus additional messages -->
                <customization>
                    <targetPackageRoot>org.alfresco.components.preview</targetPackageRoot>              
                    <sourcePackageRoot>org.sharextras.customization.media-previews.iframeviewer</sourcePackageRoot>
                </customization>
            </customizations>
            <auto-deploy>true</auto-deploy>
        </module>
        
        <module>
            <id>PDF Viewer</id>
            <customizations>
                <!-- Enable MP3Player.js plugin in Document Viewer dashlet -->
                <customization>
                    <targetPackageRoot>org.alfresco.components.preview</targetPackageRoot>
                    <sourcePackageRoot>org.sharextras.customization.media-previews.pdfviewer</sourcePackageRoot>
                </customization>
            </customizations>
            <auto-deploy>true</auto-deploy>
        </module>
        
    </modules>
</extension>